<div x-data="emblaProducts()" x-load class="w-full py-10">
    <div class="overflow-hidden" x-ref="viewport">
        <div class="flex">
            {% for product in products %}
                <div class="flex-[0_0_100%] min-w-0 sm:flex-[0_0_50%] md:flex-[0_0_33.3%] lg:flex-[0_0_20%] px-2">
                    <a  href="#"
                    class="card  transition-opacity duration-300"
                    data-price="{{ product.price }}">

                        {% include '@component/common/card-carousel.twig' with { product: product } %}
                    
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="flex justify-center items-center space-x-2 mt-8">
        <template x-for="(snap, index) in scrollSnaps" :key="index">
            <button 
                @click="scrollTo(index)"
                :class="selectedIndex === index ? 'bg-green-600 w-3 h-3' : 'border border-green-600 w-3 h-3'"
                class="rounded-full "
                aria-label="Слайд"></button>
        </template>
    </div>
</div>
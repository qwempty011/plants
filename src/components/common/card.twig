<div class="relative shadow-md pb-5 group text-lg rounded-lg overflow-hidden">
  
  {% if product.discount %}
    <span class="absolute top-2 left-2 bg-green-500 text-white text-xs px-2 py-1 rounded">
      {{ product.discount }}
    </span>
  {% endif %}

  
  <img src="{{ product.img }}" class="mx-auto mb-3 max-h-[250px] rounded-lg transition-transform " alt="{{ product.name }}">
  
  
  <div class="text-left px-3">
    <h4 class="font-medium text-gray-800">{{ product.name }}</h4>
    
    
    <div class="flex items-center gap-2 mt-1">
      <p class="text-green-600 font-semibold">${{ product.price }}</p>
      {% if product.oldPrice %}
        <p class="text-gray-400 line-through font-semibold">${{ product.oldPrice }}</p>
      {% endif %}
    </div>
  </div>
</div>
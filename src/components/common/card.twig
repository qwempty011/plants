<div class="relative pb-5 group text-lg max-w-[300px] rounded-lg overflow-hidden">
  
  {% if product.discount %}
    <span class="absolute top-2 left-2 bg-green-500 text-white text-xs px-2 py-1 rounded">
      {{ product.discount }}
    </span>
  {% endif %}

  <div class="bg-gray-50 h-72 max relative">

    <img src="{{ product.img }}"
         class="mx-auto mb-3 max-h-64 max-w-64 rounded-lg "
         alt="{{ product.name }}">

    <!-- SVG кнопки — ПОЯВЛЯЮТСЯ ПРИ НАВЕДЕНИИ -->
    <div class="absolute bottom-3 left-1/2 -translate-x-1/2 flex gap-3
                opacity-0 translate-y-3
                group-hover:opacity-100 group-hover:translate-y-0
                transition-all duration-300">

      <!-- 1. Cart -->
      <div class="p-2 bg-white rounded-full shadow hover:bg-green-100 transition cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-green-600 hover:stroke-green-800 transition" 
             fill="none" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>

      </div>

      <!-- 2. Heart -->
      <div class="p-2 bg-white rounded-full shadow hover:bg-green-100 transition cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-gray-600 hover:stroke-green-600 transition"
             fill="none" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>

      </div>

      <!-- 3. Eye -->
      <div class="p-2 bg-white rounded-full shadow hover:bg-green-100 transition cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-gray-600 hover:stroke-green-600 transition"
             fill="none" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>

      </div>

    </div>

  </div>

  <div class="text-left px-3">
    <h4 class="font-medium text-gray-800">{{ product.name }}</h4>
    
    <div class="flex items-center gap-2 mt-1">
      <p class="text-green-600 font-semibold">${{ product.price }}</p>
      {% if product.oldPrice %}
        <p class="text-gray-400 line-through font-semibold">${{ product.oldPrice }}</p>
      {% endif %}
    </div>
  </div>
</div>
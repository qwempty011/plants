<div class="m-auto flex flex-col items-center w-full max-w-[360px] text-center gap-6">

    <h3 class="text-sm text-neutral-600">
        Enter your username and password to login.
    </h3>

    <!-- Inputs -->
    <div class="flex flex-col gap-4 w-full">
        <input 
            type="email" 
            placeholder="email@example.com"
            class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:outline-none focus:border-green-600"
        >

        <input 
            type="password" 
            placeholder="password"
            class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:outline-none focus:border-green-600"
        >

        <p class="text-sm text-green-600 cursor-pointer text-right">
            Forgot Password?
        </p>
    </div>

    <!-- Login button -->
    <button class="bg-green-600 text-white w-full py-2 rounded-lg hover:bg-green-700 transition">
        Login
    </button>

    <p class="text-sm text-neutral-500">Or login with</p>

    <!-- Social buttons -->
    <div class="flex flex-col gap-3 w-full">

        <button class="border flex items-center justify-center gap-3 border-gray-300 rounded-lg py-2 hover:bg-gray-100 transition">
            <img class="w-5 h-5" src="assets/images/google.png" alt="">
            <p>Login with Google</p>
        </button>

        <button class="border flex items-center justify-center gap-3 border-gray-300 rounded-lg py-2 hover:bg-gray-100 transition">
            <img class="w-5 h-5" src="assets/images/facebook.png" alt="">
            <p>Login with Facebook</p>
        </button>

    </div>

</div>